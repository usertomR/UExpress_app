<% provide(:title, "Log in") %>
<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local:true) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>

    <%= f.submit "ログイン" %>

<% end %>

<p>アカウント未作成なら、<%= link_to "ここをクリック", signup_path %></p>
