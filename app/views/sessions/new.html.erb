<% provide(:title, "Log in") %>
<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local:true) do |f| %>
     <div class="input_form">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="input_form">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="submit_checkbox">
        <%= f.label :remember_me  do %>
            <%= f.check_box:remember_me %>
            <span>次回から入力なしでログイン</span>
        <% end %>
    </div>
    <div class="submit_button">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
<% end %>

<div class="adjust_to_form">
    パスワードを忘れましたか?<%= link_to "ならここをクリック", new_password_reset_path %>
</div>
<div class="adjust_to_form">
    アカウント未作成なら、<%= link_to "ここをクリック", signup_path %>
</div>
