<% provide(:title, "Log in") %>
<div class="form_inclosure">
  <div class="login_sign">
    ログイン
  </div>
  <div class="link_line_design replace_left create_bottom_margin">
  </div>
  <%= form_with(url: login_path, scope: :session, local:true) do |f| %>
    <div class="input_form">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="input_form">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="submit_checkbox">
      <%= f.label :remember_me  do %>
        <%= f.check_box:remember_me %>
        <span class="letter_white">次回から入力なしでログイン</span>
      <% end %>
    </div>
    <div class="submit_button">
      <div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <div class="adjust_to_form">
   <span class="letter_white">
        パスワードを忘れましたか?
    </span>
   <%= link_to "ならここをクリック", new_password_reset_path %>
  </div>
  <div class="adjust_to_form">
    <span class="letter_white">
        アカウント未作成なら、
    </span>
    <%= link_to "ここをクリック", signup_path %>
  </div>
</div>
