<% provide(:title, "Reading the Article")%>

<div class="browse_question_article_flex">
  <div class="main_view">
    <div class="title">
      <%= @article.title %>
    </div>
    <hr>
    <div class="user_info">
      <div class="info_content">
        <div>
          <% if @article.user.avatar? %>
            <div class="avatar_img">
              <%= image_tag @article.user.avatar.thumb_min.url , class: "avatar" %>
            </div>
          <% end %>
        </div>
        <div class="name">
          <a href="<%= user_path(@article.user) %>"><%= @article.user.name %></a>
        </div>
      </div>
      <div class="selfintrodution">
        <%= @article.user.selfintrodution %>
      </div>
    </div>
    <div class="other_info">
      <div class="items">
        <div class="nice_button">
          <% if current_user != @article.user %>
            <% if current_user.sum_nice_per_user.include?(@article) %>
              <%= render 'notnice' %>
            <% else %>
              <%= render 'nice' %>
            <% end %>
          <% else %>
            <div class="author">
              nice計
            </div>
          <% end%>
        </div>
        <div id="number_nice">
          <%= @article.sum_nice_per_article.count %>
        </div>
      </div>
      <div class="items">
        <div class="bookmark_button">
          <% if current_user != @article.user %>
            <% if current_user.sum_articlebookmark_per_user.include?(@article) %>
              <%= render 'notbookmark' %>
            <% else %>
              <%= render 'bookmark' %>
            <% end %>
          <% else %>
            <div class="author">
              bookmark計
            </div>
          <% end%>
        </div>
        <div id="number_bookmark">
          <%= @article.sum_bookmark_per_article.count %>
        </div>
      </div>
    </div>
    <div class="text">
      <%= @article.articletext %>
    </div>
    <div class="comment_section">
      <div class="mark_for_user">
        コメント
      </div>
      <% @article.article_comments.each do |comment| %>
        <div class="existing_comment">
          <div class="comment_user">
            <% if comment.user.avatar? %>
              <div class="commenter_avatar">
                <%= image_tag @article.user.avatar.thumb_min.url , class: "avatar" %>
              </div>
            <% end %>
            <div class="name">
              <%= comment.user.name %>
            </div>
          </div>
          <div class="comment">
            <%= comment.comment %>
          </div>
        </div>
      <% end %>
      <div class="new_comment">
        <%= form_with(model: @article.article_comments.build, local: true) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div><%= f.hidden_field :article_id, :value => @article.id %></div>
          <div><%= f.hidden_field :user_id, :value => current_user.id %></div>

          <div class="richtext_form">
            <%= f.label :comment, "コメント投稿", class: "form-label" %>
            <%= f.rich_text_area :comment, {class: "trix-content form_height"} %>
          </div>

          <div class="submit_button">
            <%= f.submit "コメント投稿", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>