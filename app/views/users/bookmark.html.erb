<% provide(:title, "bookmark") %>
<h1>お気に入りの記事</h1>

<div class="sum_question_article">
  <div>Bookmark article count / <%= @user.sum_articlebookmark_per_user.count %></div>
</div>
<div class="personal_question_article_list">
  <% if @user.sum_articlebookmark_per_user.any? %>
    <% @bookmarks.each do |bookmark| %>
      <div class="an_item interspace_items">
        <div>
          <%= link_to bookmark.title, browsing_article_path(bookmark) %>
        </div>
        <div class="flex">
          <div>文章の正しさ:<%= bookmark.accuracy_text %>&ensp;/&ensp;</div>
          <div>文章難易度:<%= bookmark.difficultylevel_text %>&ensp;/&ensp;</div>
          <div>最終修正日:<%= bookmark.updated_at %></div>
        </div>
        <div class="flex">
          <div>小学生向け:<%= ApplicationRecord.inspect_level(bookmark.Eschool_level) %>&ensp;/&ensp;</div>
          <div>中学生向け:<%= ApplicationRecord.inspect_level(bookmark.JHschool_level) %>&ensp;/&ensp;</div>
          <div>高校生向け:<%= ApplicationRecord.inspect_level(bookmark.Hschool_level) %></div>
        </div>
        <div class="separation"></div>
        <div>
          <%= form_with(model: current_user.article_bookmarks.find_by(article_id: bookmark.id),
            html: {method: :delete }, local: true) do |f| %>
            <div><%= hidden_field_tag :not_ajax, true %></div>
            <%= f.submit "ブックマーク取り消し", class: "" %>
          <% end %>
        </div>
      </div>
    <% end %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% else %>
    <strong>まだniceボタンを押していません</strong>
  <% end %>
</div>