<% provide(:title, "follow")%>
<h1><%= @user.name %>さんのフォロー</h1>


<% if @user.following.any? %>
  <% @follows.each do |follow| %>
    <div class="follow_follower_display">
      <div class="top_part">
        <div class="one_avatar">
          <% if follow.avatar? %>
            <div>
              <%= image_tag follow.avatar.thumb_min.url , class: "avatar" %>
            </div>
          <% end %>
        </div>
        <div class="one_text">
          <%= link_to follow.name , user_path(follow) %>
        </div>
      </div>
      <div class="one_selfintrodution">
        <%= follow.selfintrodution %>
      </div>
    </div>
  <% end %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% else %>
    <strong>まだ作成されていません</strong>
<% end %>
