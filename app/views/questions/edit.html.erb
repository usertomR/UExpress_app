<% provide(:title, "Create an Question")%>

<%= form_with(model: @question, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form_inclosure">
    <div class="edit_question_mark">
      質問編集
    </div>
    <div class="link_line_design replace_left create_bottom_margin">
    </div>
    <div class="article_question_form">
      <%= f.label :title, "質問タイトル", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <%= render partial: 'shared/commonpart_create_edit_article_question', locals: { f: f, article_or_question: "question" } %>
    <div class="richtext_form">
      <%= f.label :questiontext, "質問本体", class: "form-label white_text" %>
      <div class="white_background">
        <%= f.rich_text_area :questiontext, {class: "trix-content form_height"} %>
      </div>
    </div>

    <div class="article_question_form">
      <div class="item">
        解決/未解決
      </div>
      <div class="flex_mode">
        <div class="have_solved white_text">
          <%= f.radio_button(:solve, true) %>
          <%= f.label(:solve_true, "解決") %>
        </div>
        <div class="not_solved white_text">
          <%= f.radio_button(:solve, false, {checked: true}) %>
          <%= f.label(:solve_false, "未解決") %>
        </div>
      </div>
    </div>
    <div class="submit_button">
      <div>
        <%= f.submit "質問更新", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>